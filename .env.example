# ----------------------------
# Flask
# ----------------------------
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=change-me-in-production

# ----------------------------
# Application
# ----------------------------
APP_NAME=myapp
APP_HOST=0.0.0.0
APP_PORT=8000

# ----------------------------
# Database
# ----------------------------
# Example: postgresql+psycopg://user:password@localhost:5432/myapp
DATABASE_URL=postgresql+psycopg://myapp:myapp@localhost:5432/myapp

# ----------------------------
# SQLAlchemy
# ----------------------------
SQLALCHEMY_ECHO=0
SQLALCHEMY_TRACK_MODIFICATIONS=0

# ----------------------------
# Gunicorn
# ----------------------------
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=30

# ----------------------------
# Security / Auth (placeholders)
# ----------------------------
JWT_SECRET_KEY=change-me
TOKEN_EXPIRES_IN=3600

# ----------------------------
# OAuth (placeholders)
# ----------------------------
OAUTH_GOOGLE_CLIENT_ID=your-google-client-id
OAUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret

# ----------------------------
# Email / SMTP (placeholders)
# ----------------------------
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
SMTP_USE_TLS=1
SMTP_USE_SSL=0
MAIL_FROM=no-reply@example.com

# ----------------------------
# Cache / Background jobs (optional)
# ----------------------------
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
